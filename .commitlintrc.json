{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore", "revert", "wip"]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "extension",
        "web",
        "backend",
        "userscript",
        "native-server",
        "transports",
        "web-tools",
        "extension-tools",
        "mcp-react-hooks",
        "websocket-bridge",
        "examples",
        "e2e",
        "deps",
        "monorepo",
        "global"
      ]
    ],
    "scope-empty": [0],
    "subject-case": [0],
    "header-max-length": [1, "always", 120],
    "body-max-line-length": [0],
    "footer-max-line-length": [0]
  }
}
