{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore", "revert"]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "extension",
        "web",
        "transports",
        "mcp-react-hooks",
        "extension-tools",
        "websocket-bridge",
        "local-server",
        "deps",
        "monorepo"
      ]
    ],
    "subject-case": [2, "always", "lower-case"],
    "header-max-length": [2, "always", 100]
  }
}
