{
  "name": "@mcp-b/websocket-bridge",
  "version": "0.1.2",
  "description": "WebSocket bridge for connecting MCP clients to browser extensions",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "websocket",
    "bridge",
    "browser-extension",
    "chrome-extension",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-b.git",
    "directory": "local-server"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-websocket-bridge": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "express": "^5.1.0",
    "shell-quote": "^1.8.3",
    "cors": "^2.8.5",
    "spawn-rx": "^5.1.2",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "commander": "^13.1.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3",
    "dotenv": "^16.5.0",
    "@mcp-b/transports": "0.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.13.10",
    "@types/shell-quote": "^1.7.5",
    "@types/ws": "^8.18.0",
    "shx": "^0.3.4",
    "tsup": "^8.4.0",
    "typescript": "^5.6.2",
    "tsx": "^4.20.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src/cli.ts src/index.ts src/bridge-server.ts --format esm && shx chmod +x dist/*.js",
    "watch": "tsup src/cli.ts src/index.ts src/bridge-server.ts --format esm --watch",
    "dev:bridge": "tsx src/bridge-server.ts",
    "dev:proxy": "tsx src/index.ts",
    "test:bridge": "tsx src/test-bridge.ts",
    "publish:npm": "pnpm publish --access public --no-git-checks",
    "publish:dry": "pnpm publish --access public --no-git-checks --dry-run",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version"
  }
}
