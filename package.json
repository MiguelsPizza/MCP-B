{
  "name": "mcp-b",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start-example-app": "turbo run dev",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:turbo": "turbo run lint",
    "format:turbo": "turbo run format",
    "test": "turbo run test",
    "test:e2e": "turbo run test --filter=@mcp-b/e2e-tests",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "typecheck": "turbo run typecheck",
    "check-all": "pnpm run typecheck && pnpm run lint:check && pnpm run format:check",
    "publish:packages": "turbo run publish:npm --filter='./packages/*'",
    "publish:dry": "turbo run publish:dry --filter='./packages/*'",
    "version:patch": "turbo run version:patch --filter='./packages/*'",
    "version:minor": "turbo run version:minor --filter='./packages/*'",
    "version:major": "turbo run version:major --filter='./packages/*'",
    "build:packages": "turbo run build --filter='./packages/*'",
    "publish:wizard": "./scripts/publish-packages.sh"
  },
  "engines": {
    "node": ">=22.12",
    "pnpm": "^10"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@typescript/native-preview": "7.0.0-dev.20250531.1",
    "eslint": "catalog:",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jiti": "^2.4.2",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "tsx": "4.19.2",
    "typescript": "catalog:",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.12",
    "dotenv": "^16.4.5",
    "pnpm": "^10.11.0",
    "tslib": "^2.0.0",
    "turbo": "^2.3.3"
  }
}
