{
  "name": "@mcp-b/transports",
  "version": "0.1.0",
  "description": "Transports for the in browser transport protocols",
  "license": "MIT",
  "author": "Alex Nahas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguelspizza/mcp-b.git",
    "directory": "packages/mcp-b"
  },
  "homepage": "https://github.com/miguelspizza/mcp-b#readme",
  "bugs": {
    "url": "https://github.com/miguelspizza/mcp-b/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "browser",
    "transport",
    "browser-extension",
    "tab-transport",
    "chrome-extension"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo",
    "prepublishOnly": "pnpm run build",
    "publish:npm": "pnpm publish --access public --no-git-checks",
    "publish:dry": "pnpm publish --access public --no-git-checks --dry-run",
    "version:patch": "pnpm version patch --no-git-tag-version",
    "version:minor": "pnpm version minor --no-git-tag-version",
    "version:major": "pnpm version major --no-git-tag-version"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/cheerio": "^1.0.0",
    "cheerio": "^1.1.0",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "ws": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/node": "catalog:",
    "@types/ws": "^8.5.0",
    "tsup": "catalog:",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
